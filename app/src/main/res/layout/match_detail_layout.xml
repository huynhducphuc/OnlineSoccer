<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paddingbetweenline">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/fieldname" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:text="Field"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />

        <TextView
            android:id="@+id/tv_detail_fieldname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="Chi Lăng FC Chi Lăng FCChi Lăng FCChi Lăng FC"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paddingbetweenline">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/place" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:paddingLeft="10dp"
            android:text="Address"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />

        <TextView
            android:id="@+id/tv_detail_district"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:text="10 Phan Châu Trinh 1234567891212"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />

        <ImageButton
            android:id="@+id/imgGoToMapAndroid"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/direct" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paddingbetweenline">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/user" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:text="Host"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />

        <TextView
            android:id="@+id/tv_detail_hostuser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="Admin"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paddingbetweenline">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/maximumplayer" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:text="MaxPlayers"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />

        <TextView
            android:id="@+id/tv_detail_maxplayers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="12"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paddingbetweenline">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/price" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:text="Price"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />

        <TextView
            android:id="@+id/tv_detail_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="100000"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paddingbetweenline">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/start" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:text="Start"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />

        <TextView
            android:id="@+id/tv_detail_starttime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="12/23/2015 12:12:00"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paddingbetweenline">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/end" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:text="End"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />

        <TextView
            android:id="@+id/tv_detail_endtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="12/23/2015 13:12:00"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paddingbetweenline">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/iscreate" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:text="Created"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />

        <TextView
            android:id="@+id/tv_detail_created"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="12/22/2015 9:09:00"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_detail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/paddingbetweenline">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/people_join" />

        <EditText
            android:id="@+id/txt_detail_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textSize="@dimen/textSize_detail" />

        <Button
            android:id="@+id/btnJoinMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_main"
            android:gravity="center"
            android:text="Join"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>