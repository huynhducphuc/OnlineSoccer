<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/place"
            android:layout_gravity="center"/>
       <TextView
           android:layout_gravity="center"
           android:paddingLeft="10dp"
           android:layout_weight="5"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="District"/>
        <EditText
            android:id="@+id/txt_profile_district"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Hai Chau"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Username"/>
        <EditText
            android:id="@+id/txt_profile_username"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="admin"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/phone"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone Number"/>
        <EditText
            android:id="@+id/txt_profile_phonenumber"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="01262673376"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lastlogin"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Last Login"/>
        <EditText
            android:id="@+id/txt_profile_lastLogin"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:inputType="datetime"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:text="12/22/2015 11:11:11"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/usertype"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="User Type"/>
        <EditText
            android:id="@+id/txt_profile_usertype"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:text="Admin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/verifiedmember"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Verified member"/>
        <EditText
            android:id="@+id/txt_profile_verifiedmember"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="True"
            android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lastlogin"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Join date"
            />
        <EditText
            android:id="@+id/txt_profile_joindate"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="12/11/2015 11:11:11"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/email"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"/>
        <EditText
            android:id="@+id/txt_profile_email"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:text="huynhducphucdn94@gmail.com"/>
    </LinearLayout>
        <Button

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:background="#4CAF50"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="UPDATE PROFILE"/>
</LinearLayout>