<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:weightSum="12">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtFieldName"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi Lăng FC ABC"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000 đ"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/txtStartTime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="0:20-26/04/16 (Còn 2 ngày nữa)"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="30sp"
			android:id="@+id/txtSeats"
            android:textStyle="bold"
            android:text="5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="còn trống"
            android:textColor="#fff"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            />
    </LinearLayout>
</LinearLayout>